<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:TravelCompanion.MAUI.Views"
             x:Class="TravelCompanion.MAUI.Views.AuthenticationPage">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Button Text="Sign in with Google" Command="{Binding GoogleSignInCommand}" Margin="0,10,0,10" />
        <Button Text="Sign in with Apple" Command="{Binding AppleSignInCommand}" Margin="0,10,0,10" />
        <Button Text="Continue as Guest" Command="{Binding SignInCommand}" Margin="0,10,0,10" />
    </StackLayout>
</views:BasePage>
